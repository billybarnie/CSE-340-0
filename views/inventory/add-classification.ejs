<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
<form action="/inv/add-classification" method="POST" class="classification-form">
    <label for="classification_name" class="form-label">Classification Name:</label>
    <input type="text" id="classification_name" name="classification_name" class="form-input" required>
    

    <button type="submit" class="form-submit">Add Classification</button>
</form>