<% if (title) { %>
    <h1><%= title %></h1>
<%} else {
    res.redirect('/')
} %> 
    <%- messages() %>

    <div class="form-container">
        <form id="loginForm" action="/account/login" method="POST">
            <div>
                <label for="account_email">Email:</label>
                <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">
            </div>

            <div>
                <label for="password">Password:</label>
                <input type="password" id="account_password" name="account_password" required pattern="(?=.*[A-Z])(?=.*[0-9])(?=.*[\W_]).{12,}">
            </div>

            <button type="submit">Login</button>
        </form>
    </div>
    <p id="regid">Don't have an account? <a href="register">Register here</a>.</p>
   